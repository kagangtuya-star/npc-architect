<form class="npc-architect-connection-test">
  <p>
    Use current Module Settings values to test AI connectivity.
  </p>

  <div class="form-group">
    <label>Active Provider</label>
    <input type="text" value="{{provider}}" disabled />
  </div>

  <div class="form-group">
    <label>Resolved Model</label>
    <input type="text" value="{{resolvedModel}}" disabled />
  </div>

  {{#if (eq provider "openai")}}
  <div class="form-group">
    <label>Base URL</label>
    <input type="text" value="{{openaiBaseUrl}}" disabled />
  </div>
  {{/if}}

  <footer class="sheet-footer flexrow" style="gap: 8px;">
    <button id="architect-test-connection-btn" type="button">
      <i class="fas fa-plug"></i> Test Connection
    </button>
  </footer>
</form>
